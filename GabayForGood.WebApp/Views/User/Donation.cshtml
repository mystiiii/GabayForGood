@model GabayForGood.WebApp.Models.DonationVM
@{
    ViewData["Title"] = "Make a Donation";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 0;
        min-height: 100vh;
    }

    .donation-container {
        max-width: 1200px;
        margin: 20px auto;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .donation-header {
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .donation-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .donation-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .main-content {
        display: flex;
        min-height: 600px;
    }

    .project-details {
        flex: 1;
        padding: 30px;
        background-color: #f8f9ff;
        border-right: 1px solid #e0e0e0;
    }

    .project-image-container {
        position: relative;
        width: 100%;
        height: 250px;
        background: linear-gradient(45deg, #e0e0e0, #f0f0f0);
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 25px;
        border: 2px dashed #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .project-image-container:hover {
            border-color: #003840;
            background: linear-gradient(45deg, #f0f0f0, #ffffff);
        }

    .project-image-input {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        z-index: 2;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 13px;
    }

    .upload-placeholder {
        text-align: center;
        color: #888;
        z-index: 1;
    }

        .upload-placeholder i {
            font-size: 3rem;
            margin-bottom: 10px;
            color: #ccc;
        }

    .project-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .project-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }

    .meta-item {
        background: white;
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #003840;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .meta-value {
        font-size: 1rem;
        color: #333;
        font-weight: 500;
    }

    .project-description {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        line-height: 1.6;
        color: #555;
    }

    .donation-form {
        flex: 1;
        padding: 30px;
        background-color: white;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid #f0f0f0;
    }

    .amount-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-bottom: 15px;
    }

    .amount-btn {
        padding: 12px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .amount-btn:hover, .amount-btn.active {
            border-color: #003840;
            background-color: #003840;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 56, 64, 0.3);
        }

    .custom-amount {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .custom-amount:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

    .payment-methods {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

    .payment-method {
        flex: 1;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        cursor: pointer;
        text-align: center;
        transition: all 0.3s ease;
        background: white;
    }

        .payment-method:hover, .payment-method.active {
            border-color: #003840;
            background-color: #f8f9ff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 56, 64, 0.2);
        }

        .payment-method i {
            font-size: 2rem;
            margin-bottom: 8px;
            color: #003840;
        }

    .donate-btn {
        width: 100%;
        padding: 18px;
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(0, 56, 64, 0.3);
    }

        .donate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 56, 64, 0.4);
        }

    .progress-bar {
        background: linear-gradient(90deg, #003840, #005b5c);
        height: 100%;
        border-radius: 10px;
        transition: width 0.3s ease;
    }
</style>


<div class="donation-container">
    <!-- Header -->
    <div class="donation-header">
        <h1 class="donation-title">Make a Donation</h1>
        <p class="donation-subtitle">Your generosity can make a real difference</p>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Project Details -->
        <div class="project-details">
            <!-- Project Image -->
            <div class="project-image-container">
                <input type="file" accept="image/*" class="project-image-input" onchange="previewProjectImage(this)" />
                <img id="projectImage" src="" alt="Project Image" class="project-image" style="display: none;" />
                <div class="upload-placeholder" id="uploadPlaceholder">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <p>Click to upload project image</p>
                </div>
            </div>

            <!-- Project Title -->
            <h2 class="project-title">@Model.Project.Title</h2>

            <!-- Project Meta Information -->
            <div class="project-meta">
                <div class="meta-item">
                    <div class="meta-label">Category</div>
                    <div class="meta-value">@Model.Project.Category</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Cause</div>
                    <div class="meta-value">@Model.Project.Cause</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Location</div>
                    <div class="meta-value">@Model.Project.Location</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Status</div>
                    <div class="meta-value">@Model.Project.Status</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Start Date</div>
                    <div class="meta-value">@Model.Project.StartDate.ToString("MMM dd, yyyy")</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">End Date</div>
                    <div class="meta-value">@Model.Project.EndDate.ToString("MMM dd, yyyy")</div>
                </div>
            </div>

            <!-- Project Description -->
            <div class="project-description">
                <h4>About This Project</h4>
                <p>@Model.Project.Description</p>
            </div>

            <!-- Goal Progress -->
            <div class="goal-progress">
                <h4>Funding Progress</h4>
                <div class="progress-bar-container">
                    <div class="progress-bar" style="width: @(Model.FundingPercentage)%"></div>
                </div>
                <div class="progress-text">
                    <span>₱@(Model.CurrentAmount.ToString("N0")) raised</span>
                    <span>₱@(Model.Project.GoalAmount.ToString("N0")) goal</span>
                </div>
                <div class="progress-text">
                    <span><strong>@(Model.FundingPercentage.ToString("F1"))% funded</strong></span>
                    <span>@(Model.DaysRemaining) days left</span>
                </div>
            </div>
        </div>

        <!-- Donation Form -->
        <div class="donation-form">
            <form asp-action="ProcessDonation" method="post" id="donationForm">
                <input type="hidden" asp-for="ProjectId" />

                <!-- Amount Selection -->
                <div class="form-section">
                    <h3 class="section-title">Select Donation Amount</h3>
                    <div class="amount-buttons">
                        <div class="amount-btn" onclick="selectAmount(100)">₱100</div>
                        <div class="amount-btn" onclick="selectAmount(250)">₱250</div>
                        <div class="amount-btn" onclick="selectAmount(500)">₱500</div>
                        <div class="amount-btn" onclick="selectAmount(1000)">₱1,000</div>
                        <div class="amount-btn" onclick="selectAmount(2500)">₱2,500</div>
                        <div class="amount-btn" onclick="selectAmount(5000)">₱5,000</div>
                    </div>
                    <input asp-for="Amount" type="number" class="custom-amount" placeholder="Enter custom amount" min="1" step="0.01" />
                    <span asp-validation-for="Amount" class="validation-error"></span>
                </div>

                <!-- Payment Method Selection -->
                <div class="form-section">
                    <h3 class="section-title">Payment Method</h3>
                    <div class="payment-methods">
                        <div class="payment-method" onclick="selectPaymentMethod('Card')">
                            <i class="fas fa-credit-card"></i>
                            <div class="payment-method-name">Credit/Debit Card</div>
                        </div>
                        <div class="payment-method" onclick="selectPaymentMethod('GCash')">
                            <i class="fas fa-mobile-alt"></i>
                            <div class="payment-method-name">GCash</div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="PaymentMethod" id="paymentMethodInput" />
                    <span asp-validation-for="PaymentMethod" class="validation-error"></span>

                    <!-- Card Payment Details -->
                    <div id="cardPaymentDetails" class="payment-details">
                        <h4>Card Payment Information</h4>
                        <div class="form-group">
                            <label class="form-label">Cardholder Name</label>
                            <input type="text" class="form-control" placeholder="John Doe" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Expiry Date</label>
                                <input type="text" class="form-control" placeholder="MM/YY" maxlength="5" />
                            </div>
                            <div class="form-group">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" placeholder="123" maxlength="4" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Billing Address</label>
                            <input type="text" class="form-control" placeholder="Enter billing address" />
                        </div>
                    </div>

                    <!-- GCash Payment Details -->
                    <div id="gcashPaymentDetails" class="payment-details">
                        <h4>GCash Payment Information</h4>
                        <div class="form-group">
                            <label class="form-label">GCash Mobile Number</label>
                            <input type="tel" class="form-control" placeholder="09XX XXX XXXX" maxlength="11" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Account Name</label>
                            <input type="text" class="form-control" placeholder="Enter account name" />
                        </div>
                        <div style="background: #e8f4fd; padding: 15px; border-radius: 8px; margin-top: 15px;">
                            <h5 style="color: #0066cc; margin: 0 0 10px 0;">
                                <i class="fas fa-info-circle"></i> GCash Payment Instructions
                            </h5>
                            <ol style="margin: 0; color: #0066cc; font-size: 0.9rem;">
                                <li>You will receive a payment link via SMS</li>
                                <li>Click the link to open GCash app</li>
                                <li>Confirm the payment amount and details</li>
                                <li>Enter your GCash MPIN to complete</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Message -->
                <div class="form-section">
                    <h3 class="section-title">Leave a Message (Optional)</h3>
                    <div class="form-group">
                        <textarea asp-for="Message" class="form-control message-box" placeholder="Write an encouraging message for the project organizers..."></textarea>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="donate-btn">
                    <i class="fas fa-heart"></i> Complete Donation
                </button>

                <a asp-action="Browse" asp-controller="User" class="cancel-btn">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
<script>
    // Amount selection
    function selectAmount(amount) {
        // Remove active class from all amount buttons
        document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));

        // Add active class to clicked button
        event.target.classList.add('active');

        // Set the custom amount input
        document.querySelector('input[name="Amount"]').value = amount;
    }

    // Payment method selection
    function selectPaymentMethod(method) {
        // Remove active class from all payment methods
        document.querySelectorAll('.payment-method').forEach(pm => pm.classList.remove('active'));

        // Add active class to selected method
        event.target.closest('.payment-method').classList.add('active');

        // Set hidden input value
        document.getElementById('paymentMethodInput').value = method;

        // Show/hide payment details
        document.querySelectorAll('.payment-details').forEach(pd => pd.classList.remove('active'));

        if (method === 'Card') {
            document.getElementById('cardPaymentDetails').classList.add('active');
        } else if (method === 'GCash') {
            document.getElementById('gcashPaymentDetails').classList.add('active');
        }
    }

    // Project image preview
    function previewProjectImage(input) {
        const file = input.files[0];
        const preview = document.getElementById('projectImage');
        const placeholder = document.getElementById('uploadPlaceholder');

        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
                placeholder.style.display = 'none';
            };
            reader.readAsDataURL(file);
        }
    }

    // Custom amount input handling
    document.querySelector('input[name="Amount"]').addEventListener('input', function() {
        // Remove active class from amount buttons when custom amount is entered
        if (this.value) {
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));
        }
    });

    // Card number formatting
    document.querySelector('#cardPaymentDetails input[placeholder="1234 5678 9012 3456"]').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
        let matches = value.match(/\d{4,16}/g);
        let match = matches && matches[0] || '';
        let parts = [];

        for (let i = 0, len = match.length; i < len; i += 4) {
            parts.push(match.substring(i, i + 4));
        }

        if (parts.length) {
            e.target.value = parts.join(' ');
        } else {
            e.target.value = value;
        }
    });

    // Expiry date formatting
    document.querySelector('#cardPaymentDetails input[placeholder="MM/YY"]').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length >= 2) {
            value = value.substring(0, 2) + '/' + value.substring(2, 4);
        }
        e.target.value = value;
    });

    // Phone number formatting for GCash
    document.querySelector('#gcashPaymentDetails input[placeholder="09XX XXX XXXX"]').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length > 11) {
            value = value.substring(0, 11);
        }
        e.target.value = value;
    });

    // Form validation
    document.getElementById('donationForm').addEventListener('submit', function(e) {
        let isValid = true;

        // Validate amount
        const amount = document.querySelector('input[name="Amount"]').value;
        if (!amount || amount <= 0) {
            isValid = false;
            document.querySelector('input[name="Amount"]').classList.add('error');
        } else {
            document.querySelector('input[name="Amount"]').classList.remove('error');
        }

        // Validate payment method
        const paymentMethod = document.getElementById('paymentMethodInput').value;
        if (!paymentMethod) {
            isValid = false;
            alert('Please select a payment method.');
        }

        if (!isValid) {
            e.preventDefault();
        }
    });
</script>