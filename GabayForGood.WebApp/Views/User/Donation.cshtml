@model GabayForGood.WebApp.Models.DonationVM
@{
    ViewData["Title"] = "Make a Donation";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 0;
        min-height: 100vh;
    }

    .donation-container {
        max-width: 1200px;
        margin: 20px auto;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .donation-header {
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .donation-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .donation-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .main-content {
        display: flex;
        min-height: 600px;
    }

    .project-details {
        flex: 1;
        padding: 30px;
        background-color: #f8f9ff;
        border-right: 1px solid #e0e0e0;
    }

    .project-image-container {
        position: relative;
        width: 100%;
        height: 250px;
        background: linear-gradient(45deg, #e0e0e0, #f0f0f0);
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 25px;
        border: 2px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 13px;
    }

    .no-image-placeholder {
        text-align: center;
        color: #888;
        font-size: 1rem;
    }

        .no-image-placeholder i {
            font-size: 3rem;
            margin-bottom: 10px;
            color: #ccc;
            display: block;
        }

    .project-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .project-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }

    .meta-item {
        background: white;
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #003840;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .meta-value {
        font-size: 1rem;
        color: #333;
        font-weight: 500;
    }

    .project-description {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        line-height: 1.6;
        color: #555;
        margin-bottom: 20px;
    }

    .organization-details {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        border-left: 4px solid #005b5c;
    }

        .organization-details h4 {
            color: #003840;
            margin-bottom: 15px;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .organization-details h4 i {
                color: #005b5c;
            }

    .org-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 15px;
    }

    .org-info-item {
        background: #f8f9ff;
        padding: 12px;
        border-radius: 8px;
        border-left: 3px solid #005b5c;
    }

    .org-info-label {
        font-size: 0.8rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 3px;
    }

    .org-info-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .org-description {
        line-height: 1.5;
        color: #555;
        font-size: 0.95rem;
        margin-top: 10px;
    }

    .goal-progress {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-top: 20px;
    }

        .goal-progress h4 {
            margin-bottom: 15px;
            color: #333;
        }

    .progress-bar-container {
        background: #e0e0e0;
        border-radius: 10px;
        height: 12px;
        overflow: hidden;
        margin-bottom: 10px;
    }

    .progress-bar {
        background: linear-gradient(90deg, #003840, #005b5c);
        height: 100%;
        border-radius: 10px;
        transition: width 0.3s ease;
    }

    .progress-text {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .donation-form {
        flex: 1;
        padding: 30px;
        background-color: white;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid #f0f0f0;
    }

    .amount-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-bottom: 15px;
    }

    .amount-btn {
        padding: 12px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .amount-btn:hover, .amount-btn.active {
            border-color: #003840;
            background-color: #003840;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 56, 64, 0.3);
        }

    .custom-amount {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .custom-amount:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

        .custom-amount.error {
            border-color: #dc3545;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

        .form-control:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

    .payment-select {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 500;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23003840' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 20px;
        padding-right: 50px;
    }

        .payment-select:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

        .payment-select option {
            padding: 10px;
            font-size: 1rem;
        }

    .message-box {
        min-height: 100px;
        resize: vertical;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .donate-btn {
        width: 100%;
        padding: 18px;
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(0, 56, 64, 0.3);
        margin-bottom: 15px;
    }

        .donate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 56, 64, 0.4);
        }

    .cancel-btn {
        display: block;
        text-align: center;
        color: #666;
        text-decoration: none;
        font-weight: 500;
        padding: 10px;
        transition: color 0.3s ease;
    }

        .cancel-btn:hover {
            color: #003840;
        }

    @@media (max-width: 768px) {
        .main-content

    {
        flex-direction: column;
    }

    .project-details {
        border-right: none;
        border-bottom: 1px solid #e0e0e0;
    }

    .amount-buttons {
        grid-template-columns: repeat(2, 1fr);
    }

    .org-info-grid {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="donation-container">
    <div class="donation-header">
        <h1 class="donation-title">Make a Donation</h1>
        <p class="donation-subtitle">Your generosity can make a real difference</p>
    </div>

    <div class="main-content">
        <div class="project-details">
            <div class="project-image-container">
                @if (!string.IsNullOrEmpty(Model.Project.ImageUrl))
                {
                    <img src="@Model.Project.ImageUrl" alt="@Model.Project.Title" class="project-image" />
                }
                else
                {
                    <div class="no-image-placeholder">
                        <i class="fas fa-image"></i>
                        <p>No project image available</p>
                    </div>
                }
            </div>

            <h2 class="project-title">@Model.Project.Title</h2>

            <div class="project-meta">
                <div class="meta-item">
                    <div class="meta-label">Category</div>
                    <div class="meta-value">@Model.Project.Category</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Cause</div>
                    <div class="meta-value">@Model.Project.Cause</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Location</div>
                    <div class="meta-value">@Model.Project.Location</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Status</div>
                    <div class="meta-value">@Model.Project.Status</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Start Date</div>
                    <div class="meta-value">@Model.Project.StartDate.ToString("MMM dd, yyyy")</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">End Date</div>
                    <div class="meta-value">@Model.Project.EndDate.ToString("MMM dd, yyyy")</div>
                </div>
            </div>

            <div class="project-description">
                <h4>About This Project</h4>
                <p>@Model.Project.Description</p>
            </div>

            <div class="organization-details">
                <h4><i class="fas fa-building"></i> About the Organization</h4>
                <div class="org-info-grid">
                    <div class="org-info-item">
                        <div class="org-info-label">Organization</div>
                        <div class="org-info-value">@Model.Organization.Name</div>
                    </div>
                    <div class="org-info-item">
                        <div class="org-info-label">Contact Person</div>
                        <div class="org-info-value">@Model.Organization.ContactPerson</div>
                    </div>
                    <div class="org-info-item">
                        <div class="org-info-label">Founded</div>
                        <div class="org-info-value">@Model.Organization.YearFounded</div>
                    </div>
                    <div class="org-info-item">
                        <div class="org-info-label">Email</div>
                        <div class="org-info-value">@Model.Organization.Email</div>
                    </div>
                    <div class="org-info-item">
                        <div class="org-info-label">Contact</div>
                        <div class="org-info-value">@Model.Organization.ContactNo</div>
                    </div>
                    <div class="org-info-item">
                        <div class="org-info-label">Address</div>
                        <div class="org-info-value">@Model.Organization.Address</div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Organization.Description))
                {
                    <div class="org-description">
                        @Model.Organization.Description
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Organization.OrgLink))
                {
                    <div style="margin-top: 10px;">
                        <a href="@Model.Organization.OrgLink" target="_blank" style="color: #005b5c; text-decoration: none; font-weight: 500;">
                            <i class="fas fa-external-link-alt"></i> Visit Organization Website
                        </a>
                    </div>
                }
            </div>

            <div class="goal-progress">
                <h4>Funding Progress</h4>
                <div class="progress-bar-container">
                    <div class="progress-bar" style="width: @(Model.FundingPercentage)%"></div>
                </div>
                <div class="progress-text">
                    <span>₱@(Model.CurrentAmount.ToString("N0")) raised</span>
                    <span>₱@(Model.Project.GoalAmount.ToString("N0")) goal</span>
                </div>
                <div class="progress-text">
                    <span><strong>@(Model.FundingPercentage.ToString("F1"))% funded</strong></span>
                    <span>@(Model.DaysRemaining) days left</span>
                </div>
            </div>
        </div>

        <div class="donation-form">
            <form asp-action="ProcessDonation" method="post" id="donationForm">
                <input type="hidden" asp-for="ProjectId" />

                <div class="form-section">
                    <h3 class="section-title">Select Donation Amount</h3>
                    <div class="amount-buttons">
                        <div class="amount-btn" onclick="selectAmount(100)">₱100</div>
                        <div class="amount-btn" onclick="selectAmount(250)">₱250</div>
                        <div class="amount-btn" onclick="selectAmount(500)">₱500</div>
                        <div class="amount-btn" onclick="selectAmount(1000)">₱1,000</div>
                        <div class="amount-btn" onclick="selectAmount(2500)">₱2,500</div>
                        <div class="amount-btn" onclick="selectAmount(5000)">₱5,000</div>
                    </div>
                    <input asp-for="Amount" type="number" class="custom-amount" placeholder="Enter custom amount" min="1" step="0.01" />
                    <span asp-validation-for="Amount" class="validation-error"></span>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Payment Method</h3>
                    <div class="form-group">
                        <label class="form-label">Choose Payment Method</label>
                        <select asp-for="PaymentMethod" class="payment-select">
                            <option value="">Select a payment method</option>
                            <option value="Card">Credit/Debit Card</option>
                            <option value="GCash">GCash</option>
                        </select>
                        <span asp-validation-for="PaymentMethod" class="validation-error"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Leave a Message (Optional)</h3>
                    <div class="form-group">
                        <label class="form-label">Your Message</label>
                        <textarea asp-for="Message" class="form-control message-box" placeholder="Write an encouraging message for the project organizers..."></textarea>
                    </div>
                </div>

                <button type="submit" class="donate-btn">
                    <i class="fas fa-heart"></i> Complete Donation
                </button>

                <a asp-action="Browse" asp-controller="User" class="cancel-btn">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
<script>
    // Amount selection
    function selectAmount(amount) {
        // Remove active class from all amount buttons
        document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));

        // Add active class to clicked button
        event.target.classList.add('active');

        // Set the custom amount input
        document.querySelector('input[name="Amount"]').value = amount;
    }

    // Custom amount input handling
    document.querySelector('input[name="Amount"]').addEventListener('input', function() {
        // Remove active class from amount buttons when custom amount is entered
        if (this.value) {
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));
        }
    });

    // Form validation
    document.getElementById('donationForm').addEventListener('submit', function(e) {
        let isValid = true;

        // Validate amount
        const amount = document.querySelector('input[name="Amount"]').value;
        if (!amount || amount <= 0) {
            isValid = false;
            document.querySelector('input[name="Amount"]').classList.add('error');
        } else {
            document.querySelector('input[name="Amount"]').classList.remove('error');
        }

        // Validate payment method
        const paymentMethod = document.querySelector('select[name="PaymentMethod"]').value;
        if (!paymentMethod) {
            isValid = false;
            document.querySelector('select[name="PaymentMethod"]').style.borderColor = '#dc3545';
            alert('Please select a payment method.');
        } else {
            document.querySelector('select[name="PaymentMethod"]').style.borderColor = '#e0e0e0';
        }

        if (!isValid) {
            e.preventDefault();
            alert('Please fill in all required fields.');
        }
    });
</script>