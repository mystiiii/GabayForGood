@model GabayForGood.WebApp.Models.DonationVM
@{
    ViewData["Title"] = "Make a Donation";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 0;
        min-height: 100vh;
    }

    .donation-container {
        max-width: 1200px;
        margin: 20px auto;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .donation-header {
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .donation-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .donation-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .main-content {
        display: flex;
        min-height: 600px;
    }

    .project-details {
        flex: 1;
        padding: 30px;
        background-color: #f8f9ff;
        border-right: 1px solid #e0e0e0;
    }

    .project-image-container {
        position: relative;
        width: 100%;
        height: 250px;
        background: linear-gradient(45deg, #e0e0e0, #f0f0f0);
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 25px;
        border: 2px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 13px;
    }

    .no-image-placeholder {
        text-align: center;
        color: #888;
        font-size: 1rem;
    }

        .no-image-placeholder i {
            font-size: 3rem;
            margin-bottom: 10px;
            color: #ccc;
            display: block;
        }

    .project-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .project-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }

    .meta-item {
        background: white;
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #003840;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .meta-value {
        font-size: 1rem;
        color: #333;
        font-weight: 500;
    }

    .project-description {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        line-height: 1.6;
        color: #555;
    }

    .goal-progress {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-top: 20px;
    }

        .goal-progress h4 {
            margin-bottom: 15px;
            color: #333;
        }

    .progress-bar-container {
        background: #e0e0e0;
        border-radius: 10px;
        height: 12px;
        overflow: hidden;
        margin-bottom: 10px;
    }

    .progress-bar {
        background: linear-gradient(90deg, #003840, #005b5c);
        height: 100%;
        border-radius: 10px;
        transition: width 0.3s ease;
    }

    .progress-text {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .donation-form {
        flex: 1;
        padding: 30px;
        background-color: white;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid #f0f0f0;
    }

    .amount-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-bottom: 15px;
    }

    .amount-btn {
        padding: 12px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .amount-btn:hover, .amount-btn.active {
            border-color: #003840;
            background-color: #003840;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 56, 64, 0.3);
        }

    .custom-amount {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
    }

        .custom-amount:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

        .custom-amount.error {
            border-color: #dc3545;
        }

    .payment-methods {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

    .payment-method {
        flex: 1;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        cursor: pointer;
        text-align: center;
        transition: all 0.3s ease;
        background: white;
    }

        .payment-method:hover, .payment-method.active {
            border-color: #003840;
            background-color: #f8f9ff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 56, 64, 0.2);
        }

        .payment-method i {
            font-size: 2rem;
            margin-bottom: 8px;
            color: #003840;
        }

    .payment-details {
        display: none;
        margin-top: 20px;
        padding: 20px;
        border: 2px solid #f0f0f0;
        border-radius: 10px;
        background-color: #fafafa;
    }

        .payment-details.active {
            display: block;
        }

        .payment-details h4 {
            margin-bottom: 15px;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 5px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #003840;
            box-shadow: 0 0 0 3px rgba(0, 56, 64, 0.1);
        }

    .form-row {
        display: flex;
        gap: 15px;
    }

        .form-row .form-group {
            flex: 1;
        }

    .message-box {
        min-height: 100px;
        resize: vertical;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .donate-btn {
        width: 100%;
        padding: 18px;
        background: linear-gradient(135deg, #003840 0%, #005b5c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(0, 56, 64, 0.3);
        margin-bottom: 15px;
    }

        .donate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 56, 64, 0.4);
        }

    .cancel-btn {
        display: block;
        text-align: center;
        color: #666;
        text-decoration: none;
        font-weight: 500;
        padding: 10px;
        transition: color 0.3s ease;
    }

        .cancel-btn:hover {
            color: #003840;
        }

    .gcash-instructions {
        background: #e8f4fd;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
    }

        .gcash-instructions h5 {
            color: #0066cc;
            margin: 0 0 10px 0;
        }

        .gcash-instructions ol {
            margin: 0;
            color: #0066cc;
            font-size: 0.9rem;
        }

    @@media (max-width: 768px) {
        .main-content

    {
        flex-direction: column;
    }

    .project-details {
        border-right: none;
        border-bottom: 1px solid #e0e0e0;
    }

    .amount-buttons {
        grid-template-columns: repeat(2, 1fr);
    }

    .payment-methods {
        flex-direction: column;
    }

    .form-row {
        flex-direction: column;
    }

    }
</style>

<div class="donation-container">
    <div class="donation-header">
        <h1 class="donation-title">Make a Donation</h1>
        <p class="donation-subtitle">Your generosity can make a real difference</p>
    </div>

    <div class="main-content">
        <div class="project-details">
            <div class="project-image-container">
                @if (!string.IsNullOrEmpty(Model.Project.ImageUrl))
                {
                    <img src="@Model.Project.ImageUrl" alt="@Model.Project.Title" class="project-image" />
                }
                else
                {
                    <div class="no-image-placeholder">
                        <i class="fas fa-image"></i>
                        <p>No project image available</p>
                    </div>
                }
            </div>

            <h2 class="project-title">@Model.Project.Title</h2>

            <div class="project-meta">
                <div class="meta-item">
                    <div class="meta-label">Category</div>
                    <div class="meta-value">@Model.Project.Category</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Cause</div>
                    <div class="meta-value">@Model.Project.Cause</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Location</div>
                    <div class="meta-value">@Model.Project.Location</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Status</div>
                    <div class="meta-value">@Model.Project.Status</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">Start Date</div>
                    <div class="meta-value">@Model.Project.StartDate.ToString("MMM dd, yyyy")</div>
                </div>
                <div class="meta-item">
                    <div class="meta-label">End Date</div>
                    <div class="meta-value">@Model.Project.EndDate.ToString("MMM dd, yyyy")</div>
                </div>
            </div>

            <div class="project-description">
                <h4>About This Project</h4>
                <p>@Model.Project.Description</p>
            </div>

            <div class="goal-progress">
                <h4>Funding Progress</h4>
                <div class="progress-bar-container">
                    <div class="progress-bar" style="width: @(Model.FundingPercentage)%"></div>
                </div>
                <div class="progress-text">
                    <span>₱@(Model.CurrentAmount.ToString("N0")) raised</span>
                    <span>₱@(Model.Project.GoalAmount.ToString("N0")) goal</span>
                </div>
                <div class="progress-text">
                    <span><strong>@(Model.FundingPercentage.ToString("F1"))% funded</strong></span>
                    <span>@(Model.DaysRemaining) days left</span>
                </div>
            </div>
        </div>

        <div class="donation-form">
            <form asp-action="ProcessDonation" method="post" id="donationForm">
                <input type="hidden" asp-for="ProjectId" />

                <div class="form-section">
                    <h3 class="section-title">Select Donation Amount</h3>
                    <div class="amount-buttons">
                        <div class="amount-btn" onclick="selectAmount(100)">₱100</div>
                        <div class="amount-btn" onclick="selectAmount(250)">₱250</div>
                        <div class="amount-btn" onclick="selectAmount(500)">₱500</div>
                        <div class="amount-btn" onclick="selectAmount(1000)">₱1,000</div>
                        <div class="amount-btn" onclick="selectAmount(2500)">₱2,500</div>
                        <div class="amount-btn" onclick="selectAmount(5000)">₱5,000</div>
                    </div>
                    <input asp-for="Amount" type="number" class="custom-amount" placeholder="Enter custom amount" min="1" step="0.01" />
                    <span asp-validation-for="Amount" class="validation-error"></span>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Payment Method</h3>
                    <div class="payment-methods">
                        <div class="payment-method" onclick="selectPaymentMethod('Card')">
                            <i class="fas fa-credit-card"></i>
                            <div class="payment-method-name">Credit/Debit Card</div>
                        </div>
                        <div class="payment-method" onclick="selectPaymentMethod('GCash')">
                            <i class="fas fa-mobile-alt"></i>
                            <div class="payment-method-name">GCash</div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="PaymentMethod" id="paymentMethodInput" />
                    <span asp-validation-for="PaymentMethod" class="validation-error"></span>

                    <div id="cardPaymentDetails" class="payment-details">
                        <h4>Card Payment Information</h4>
                        <div class="form-group">
                            <label class="form-label">Cardholder Name</label>
                            <input type="text" class="form-control" placeholder="John Doe" required />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" required />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Expiry Date</label>
                                <input type="text" class="form-control" placeholder="MM/YY" maxlength="5" required />
                            </div>
                            <div class="form-group">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" placeholder="123" maxlength="4" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Billing Address</label>
                            <input type="text" class="form-control" placeholder="Enter billing address" required />
                        </div>
                    </div>

                    <div id="gcashPaymentDetails" class="payment-details">
                        <h4>GCash Payment Information</h4>
                        <div class="form-group">
                            <label class="form-label">GCash Mobile Number</label>
                            <input type="tel" class="form-control" placeholder="09XX XXX XXXX" maxlength="11" required />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Account Name</label>
                            <input type="text" class="form-control" placeholder="Enter account name" required />
                        </div>
                        <div class="gcash-instructions">
                            <h5><i class="fas fa-info-circle"></i> GCash Payment Instructions</h5>
                            <ol>
                                <li>You will receive a payment link via SMS</li>
                                <li>Click the link to open GCash app</li>
                                <li>Confirm the payment amount and details</li>
                                <li>Enter your GCash MPIN to complete</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Message -->
                <div class="form-section">
                    <h3 class="section-title">Leave a Message (Optional)</h3>
                    <div class="form-group">
                        <textarea asp-for="Message" class="form-control message-box" placeholder="Write an encouraging message for the project organizers..."></textarea>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="donate-btn">
                    <i class="fas fa-heart"></i> Complete Donation
                </button>

                <a asp-action="Browse" asp-controller="User" class="cancel-btn">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
<script>
    // Amount selection
    function selectAmount(amount) {
        // Remove active class from all amount buttons
        document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));

        // Add active class to clicked button
        event.target.classList.add('active');

        // Set the custom amount input
        document.querySelector('input[name="Amount"]').value = amount;
    }

    // Payment method selection
    function selectPaymentMethod(method) {
        // Remove active class from all payment methods
        document.querySelectorAll('.payment-method').forEach(pm => pm.classList.remove('active'));

        // Add active class to selected method
        event.target.closest('.payment-method').classList.add('active');

        // Set hidden input value
        document.getElementById('paymentMethodInput').value = method;

        // Hide all payment details first
        document.querySelectorAll('.payment-details').forEach(pd => {
            pd.classList.remove('active');
        });

        // Show the selected payment method details
        if (method === 'Card') {
            document.getElementById('cardPaymentDetails').classList.add('active');
        } else if (method === 'GCash') {
            document.getElementById('gcashPaymentDetails').classList.add('active');
        }
    }

    // Custom amount input handling
    document.querySelector('input[name="Amount"]').addEventListener('input', function() {
        // Remove active class from amount buttons when custom amount is entered
        if (this.value) {
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('active'));
        }
    });

    // Card number formatting
    const cardNumberInput = document.querySelector('#cardPaymentDetails input[placeholder="1234 5678 9012 3456"]');
    if (cardNumberInput) {
        cardNumberInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let matches = value.match(/\d{4,16}/g);
            let match = matches && matches[0] || '';
            let parts = [];

            for (let i = 0, len = match.length; i < len; i += 4) {
                parts.push(match.substring(i, i + 4));
            }

            if (parts.length) {
                e.target.value = parts.join(' ');
            } else {
                e.target.value = value;
            }
        });
    }

    // Expiry date formatting
    const expiryInput = document.querySelector('#cardPaymentDetails input[placeholder="MM/YY"]');
    if (expiryInput) {
        expiryInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });
    }

    // Phone number formatting for GCash
    const phoneInput = document.querySelector('#gcashPaymentDetails input[placeholder="09XX XXX XXXX"]');
    if (phoneInput) {
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) {
                value = value.substring(0, 11);
            }
            e.target.value = value;
        });
    }

    // Form validation
    document.getElementById('donationForm').addEventListener('submit', function(e) {
        let isValid = true;

        // Validate amount
        const amount = document.querySelector('input[name="Amount"]').value;
        if (!amount || amount <= 0) {
            isValid = false;
            document.querySelector('input[name="Amount"]').classList.add('error');
        } else {
            document.querySelector('input[name="Amount"]').classList.remove('error');
        }

        // Validate payment method
        const paymentMethod = document.getElementById('paymentMethodInput').value;
        if (!paymentMethod) {
            isValid = false;
            alert('Please select a payment method.');
        }

        // Validate payment method specific fields
        if (paymentMethod === 'Card') {
            const cardFields = document.querySelectorAll('#cardPaymentDetails input[required]');
            cardFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.style.borderColor = '#dc3545';
                } else {
                    field.style.borderColor = '#e0e0e0';
                }
            });
        } else if (paymentMethod === 'GCash') {
            const gcashFields = document.querySelectorAll('#gcashPaymentDetails input[required]');
            gcashFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.style.borderColor = '#dc3545';
                } else {
                    field.style.borderColor = '#e0e0e0';
                }
            });
        }

        if (!isValid) {
            e.preventDefault();
            alert('Please fill in all required fields.');
        }
    });

    // Initialize form - ensure payment details are hidden on page load
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.payment-details').forEach(pd => {
            pd.classList.remove('active');
        });
    });
</script>