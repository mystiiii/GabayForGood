@model GabayForGood.WebApp.Models.SignUpVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - Gabay For Good</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #194041 0%, #0e4d64 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 40px 0;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.03);
                pointer-events: none;
            }

        .brand-header {
            position: absolute;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.5rem;
            font-weight: 900;
            color: white;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .brand-header:hover {
                color: #F4C430;
            }

        .auth-container {
            width: 100%;
            max-width: 500px;
            padding: 20px;
            margin-top: 60px;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 3rem 2.5rem;
            color: white;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .auth-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
            }

        .auth-title {
            font-size: 2.2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        .form-row {
            display: flex;
            gap: 15px;
        }

            .form-row .form-group {
                flex: 1;
            }

        .form-control {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            padding: 14px 18px;
            font-size: 1rem;
            color: #2C3E50;
            transition: all 0.3s ease;
            width: 100%;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.95);
                border-color: #F4C430;
                box-shadow: 0 0 0 0.2rem rgba(244, 196, 48, 0.25);
                color: #2C3E50;
                outline: none;
            }

            .form-control::placeholder {
                color: rgba(44, 62, 80, 0.6);
                text-transform: capitalize;
            }

        .btn-auth {
            background: linear-gradient(135deg, #F4C430 0%, #E6B800 100%);
            border: none;
            color: #2C3E50;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-radius: 12px;
            padding: 14px 0;
            width: 100%;
            margin-top: 1.5rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-auth:hover {
                background: linear-gradient(135deg, #E6B800 0%, #D4A500 100%);
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(244, 196, 48, 0.4);
            }

        .auth-link {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }

            .auth-link:hover {
                color: #F4C430;
                text-decoration: underline;
            }

        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            text-align: center;
            background: rgba(255, 107, 107, 0.1);
            padding: 10px;
            border-radius: 8px;
            border-left: 4px solid #ff6b6b;
        }

        .field-validation-error {
            color: #ff6b6b !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .input-validation-error {
            border-color: #ff6b6b !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25) !important;
        }

        .footer-text {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
            text-align: center;
        }

        @@media (max-width: 576px) {
            .brand-header

        {
            font-size: 2rem;
            top: 20px;
        }

        .auth-container {
            margin-top: 40px;
        }

        .auth-card {
            padding: 2rem 1.5rem;
            margin: 0 15px;
        }

        .auth-title {
            font-size: 1.8rem;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Home")" class="brand-header">Gabay For Good</a>

    <div class="auth-container">
        <div class="auth-card">
            <h4 class="auth-title">Join Our Community</h4>
            <form asp-controller="User" asp-action="SignUp" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group">
                        <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control" />
                        <span asp-validation-for="FirstName" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control" />
                        <span asp-validation-for="LastName" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input asp-for="Email" placeholder="Email Address" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ContactNo" placeholder="Contact Number" type="tel" class="form-control" />
                    <span asp-validation-for="ContactNo" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" placeholder="Create Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn-auth">Create Account</button>

                <a asp-controller="User" asp-action="SignIn" class="auth-link">
                    Already have an account? Sign in here
                </a>
            </form>
        </div>
    </div>

    <div class="footer-text">
        Making every peso count for Filipino communities
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}