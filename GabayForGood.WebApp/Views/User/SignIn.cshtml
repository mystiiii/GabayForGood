@model GabayForGood.WebApp.Models.SignInVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #1d3835;
            font-family: Arial, sans-serif;
        }

        .auth-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .auth-card {
            background-color: rgba(255, 255, 255, 0.06);
            padding: 2rem;
            border-radius: 12px;
            width: 300px;
            color: white;
            text-align: center;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

            .auth-card input[type="text"],
            .auth-card input[type="password"] {
                width: 100%;
                padding: 10px;
                margin: 8px 0;
                border-radius: 6px;
                border: none;
            }

            .auth-card input[type="submit"] {
                background-color: white;
                color: #1d3835;
                padding: 8px 16px;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                margin-top: 10px;
            }

            .auth-card a {
                color: white;
                text-decoration: underline;
                display: block;
                margin-top: 12px;
            }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <h4>User Login</h4>
            <form asp-controller="User" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <input asp-for="UserName" placeholder="username" type="text" />
                <input asp-for="Password" placeholder="password" type="password" />

                <input type="submit" value="Login" />

                <a asp-controller="User" asp-action="SignUp">Doesn’t have account? Sign Up</a>
            </form>
        </div>
    </div>
</body>
</html>
