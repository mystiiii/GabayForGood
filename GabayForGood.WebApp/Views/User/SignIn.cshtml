@model GabayForGood.WebApp.Models.SignInVM
@{
    Layout = null;
}

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #2C7A7B !important;
        font-family: Arial, sans-serif;
    }

    .custom-card {
        background-color: #315456 !important;
        border: none !important;
        border-radius: 12px;
        color: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        padding: 2rem;
    }

    .custom-card h4 {
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .custom-card .form-control {
        border-radius: 6px;
        padding: 10px;
        margin-bottom: 1rem;
        color: #315456 !important;
    }

    .custom-card .form-control:focus {
        background-color: white !important;
        border: none !important;
        box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25) !important;
        color: #315456 !important;
    }

    .custom-card .form-control::placeholder {
        color: rgba(49, 84, 86, 0.6) !important;
    }

    .custom-card .btn-primary {
        background-color: white !important;
        border-color: white !important;
        color: #315456 !important;
        font-weight: 500;
        border-radius: 6px;
        padding: 10px 0;
        width: 100%;
        margin-top: 0.5rem;
    }

    .custom-card .btn-primary:hover {
        background-color: #f8f9fa !important;
        border-color: #f8f9fa !important;
        color: #315456 !important;
    }

    .custom-card a {
        color: white !important;
        text-decoration: underline;
        display: block;
        text-align: center;
        margin-top: 1rem;
    }

    .custom-card a:hover {
        color: #f8f9fa !important;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.9rem;
    }
</style>
    
<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="custom-card col-12 col-sm-8 col-md-5 col-lg-4">
        <h4 class="text-center">User Login</h4>

        @using (Html.BeginForm("SignIn", "User", new { returnUrl = Model.ReturnUrl }, FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })

            <button type="submit" class="btn btn-primary">Login</button>

            <a asp-controller="User" asp-action="SignUp">Don’t have an account? Sign Up</a>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
