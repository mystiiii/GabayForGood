@model GabayForGood.WebApp.Models.SignInVM
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gabay For Good</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0e4d64 0%, #194041 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.03);
                pointer-events: none;
            }

        .brand-header {
            position: absolute;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.5rem;
            font-weight: 900;
            color: white;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .brand-header:hover {
                color: #F4C430;
            }

        .auth-container {
            width: 100%;
            max-width: 450px;
            padding: 20px;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 3rem 2.5rem;
            color: white;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .auth-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
            }

        .auth-title {
            font-size: 2.2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.95rem;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            padding: 14px 18px;
            font-size: 1rem;
            color: #2C3E50;
            transition: all 0.3s ease;
            width: 100%;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.95);
                border-color: #F4C430;
                box-shadow: 0 0 0 0.2rem rgba(244, 196, 48, 0.25);
                color: #2C3E50;
                outline: none;
            }

            .form-control::placeholder {
                color: rgba(44, 62, 80, 0.6);
            }

        .input-validation-error {
            border-color: #ff6b6b !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25) !important;
        }

        .btn-auth {
            background: linear-gradient(135deg, #F4C430 0%, #E6B800 100%);
            border: none;
            color: #2C3E50;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-radius: 12px;
            padding: 14px 0;
            width: 100%;
            margin-top: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-auth:hover {
                background: linear-gradient(135deg, #E6B800 0%, #D4A500 100%);
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(244, 196, 48, 0.4);
            }

        .auth-link {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }

            .auth-link:hover {
                color: #F4C430;
                text-decoration: underline;
            }

        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            text-align: center;
            background: rgba(255, 107, 107, 0.1);
            padding: 10px;
            border-radius: 8px;
            border-left: 4px solid #ff6b6b;
        }

        .field-validation-error {
            color: #ff6b6b;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: block;
            background: rgba(255, 107, 107, 0.1);
            padding: 8px 12px;
            border-radius: 6px;
            border-left: 3px solid #ff6b6b;
        }

        .field-validation-valid {
            display: none;
        }

        .validation-summary-errors {
            color: #ff6b6b !important;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            text-align: center;
            background: rgba(255, 107, 107, 0.1);
            padding: 10px;
            border-radius: 8px;
            border-left: 4px solid #ff6b6b;
        }

            .validation-summary-errors ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        .footer-text {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
            text-align: center;
        }

        .remember-me {
            display: flex;
            align-items: center;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
        }

            .remember-me input[type="checkbox"] {
                margin-right: 8px;
                transform: scale(1.2);
                accent-color: #F4C430;
            }

            .remember-me label {
                color: rgba(255, 255, 255, 0.9);
                font-size: 0.9rem;
                cursor: pointer;
                margin: 0;
            }

            /* Hide the duplicate checkbox that Html.CheckBox creates */
            .remember-me input[type="hidden"] {
                display: none;
            }

        @@media (max-width: 576px) {
            .brand-header

        {
            font-size: 2rem;
            top: 20px;
        }

        .auth-card {
            padding: 2rem 1.5rem;
            margin: 0 15px;
        }

        .auth-title {
            font-size: 1.8rem;
        }

        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Home")" class="brand-header">Gabay For Good</a>

    <div class="auth-container">
        <div class="auth-card">
            <h4 class="auth-title">Welcome Back</h4>

            @using (Html.BeginForm("SignIn", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ReturnUrl)
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Email, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                placeholder = "Enter your email address",
                                type = "email",
                                autocomplete = "email"
                            }
                        })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Password, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                placeholder = "Enter your password",
                                autocomplete = "current-password"
                            }
                        })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>

                <button type="submit" class="btn-auth">
                    Sign In
                </button>

                <a asp-controller="User" asp-action="SignUp" class="auth-link">
                    Don't have an account? Create one here
                </a>
            }
        </div>
    </div>

    <div class="footer-text">
        Making every peso count for Filipino communities
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</html>