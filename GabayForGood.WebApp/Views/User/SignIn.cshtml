@model GabayForGood.WebApp.Models.SignInVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #2C7A7B !important;
            font-family: Arial, sans-serif;
        }

        .custom-card {
            background-color: #315456 !important;
            border: none !important;
            border-radius: 12px;
            color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

            .custom-card h4 {
                color: white !important;
            }

            .custom-card .form-label {
                color: white !important;
            }

            .custom-card .form-control {
                background-color: white !important;
                border: none !important;
                border-radius: 6px;
                color: #315456 !important;
                padding: 10px;
            }

                .custom-card .form-control:focus {
                    background-color: white !important;
                    border: none !important;
                    box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25) !important;
                    color: #315456 !important;
                }

                .custom-card .form-control::placeholder {
                    color: rgba(49, 84, 86, 0.6) !important;
                }

            .custom-card .btn-primary {
                background-color: white !important;
                border-color: white !important;
                color: #315456 !important;
                font-weight: 500;
                border-radius: 6px;
                padding: 8px 16px;
                cursor: pointer;
            }

                .custom-card .btn-primary:hover {
                    background-color: #f8f9fa !important;
                    border-color: #f8f9fa !important;
                    color: #315456 !important;
                }

                .custom-card .btn-primary:focus {
                    background-color: white !important;
                    border-color: white !important;
                    color: #315456 !important;
                    box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25) !important;
                }

            .custom-card a {
                color: white !important;
                text-decoration: underline;
            }

                .custom-card a:hover {
                    color: #f8f9fa !important;
                    text-decoration: underline;
                }

        .text-danger {
            color: #ff6b6b !important;
        }
    </style>
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card shadow p-4 custom-card" style="min-width: 350px;">
            <h4 class="text-center mb-4">User Login</h4>
            <form asp-controller="User" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary py-2">Login</button>
                </div>
                <div class="text-center">
                    <a asp-controller="User" asp-action="SignUp">Don't have an account? Sign Up</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>