@using GabayForGood.WebApp.Models
@model CreateProjectUpdateVM
@{
    //AddUpdate.cshtml
    ViewData["Title"] = "Add Project Update";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
    }

    .add-container {
        max-width: 850px;
        margin: 30px auto;
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.08);
    }

    .add-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #eee;
        margin-bottom: 25px;
        padding-bottom: 15px;
    }

    .add-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    .back-link {
        background-color: #6c757d;
        color: #fff;
        padding: 10px 20px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.25s ease;
    }

        .back-link:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
            text-decoration: none;
            color: #fff;
        }

    .date-box {
        background: #f1f3f5;
        padding: 12px 15px;
        border-radius: 6px;
        color: #555;
        font-size: 14px;
        margin-bottom: 25px;
        display: flex;
        justify-content: space-between;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1.5px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.25s;
    }

        .form-control:focus {
            border-color: #ffd700;
            outline: none;
            box-shadow: 0 0 0 2px rgba(255,215,0,0.25);
        }

    textarea.form-control {
        resize: vertical;
    }

    .text-danger {
        font-size: 12px;
        color: #dc3545;
        margin-top: 4px;
    }

    .current-image {
        max-width: 220px;
        max-height: 160px;
        border-radius: 6px;
        margin-top: 10px;
        border: 1px solid #ddd;
    }

    .form-note {
        font-size: 12px;
        color: #777;
        margin-top: 4px;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .btn {
        padding: 10px 28px;
        border-radius: 25px;
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.25s ease;
    }

    .btn-primary {
        background-color: #dc3545;
        color: white;
    }

        .btn-primary:hover {
            background-color: #c82333;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
        }

    .image-preview-container {
        position: relative;
        max-width: 220px;
        max-height: 160px;
        border-radius: 6px;
        margin-top: 10px;
        border: 1px solid #ddd;
        overflow: hidden;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 160px;
    }

    .image-placeholder {
        color: #999;
        font-size: 14px;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .add-container

    {
        margin: 15px;
        padding: 25px;
    }

    .add-header {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    .date-box {
        flex-direction: column;
        gap: 5px;
    }

    }
</style>

<div class="add-container">
    <div class="add-header">
        <h1 class="add-title">Add Project Update</h1>
        <a asp-controller="Organization" asp-action="Updates" asp-route-id="@Model.ProjectId" class="back-link">← Back</a>
    </div>

    <div class="date-box">
        <span><strong>Creating on:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")</span>
        <span><strong>Time:</strong> @DateTime.Now.ToString("h:mm tt")</span>
    </div>

    <form asp-controller="Organization" asp-action="CreateUpdate" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProjectId" />

        <div class="form-group">
            <label asp-for="Title" class="form-label">Update Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter update title..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Update Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Describe what's new..." rows="6"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="form-label">Image URL (Optional)</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Current image" class="current-image" />
            }
            else
            {
                <div class="image-preview-container">
                    <div class="image-placeholder">
                        <i class="fas fa-image fa-2x mb-2"></i><br />
                        No Image Selected
                    </div>
                </div>
            }
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="form-label">Or Upload New Image (Optional)</label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            <div class="form-note">Supported formats: JPG, PNG, GIF (Max 5MB)</div>
        </div>

        <div class="form-actions">
            <a asp-controller="Organization" asp-action="Updates" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Update</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}