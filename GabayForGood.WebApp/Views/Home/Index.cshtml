@{
    ViewData["Title"] = "Gabay For Good - User Landing Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F8F9FA;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .bg-dark-blue {
        background: linear-gradient(135deg, #0e4d64 0%, #194041 100%);
    }

    .bg-section {
        background-color: #ffffff;
    }

    .bg-objectives {
        background: linear-gradient(135deg, #194041 0%, #0e4d64 100%);
        color: white;
        position: relative;
    }

        .bg-objectives::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.05);
            pointer-events: none;
        }

    .card-custom {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 28px 24px;
        color: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
        margin-bottom: 24px;
    }

        .card-custom:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.3);
            border-color: rgba(255, 255, 255, 0.3);
        }

    .card-highlight {
        background: rgba(244, 196, 48, 0.9);
        backdrop-filter: blur(10px);
        color: #2C3E50;
        font-weight: 500;
        border: 1px solid rgba(244, 196, 48, 0.3);
    }

        .card-highlight:hover {
            background: rgba(244, 196, 48, 0.95);
            border-color: rgba(244, 196, 48, 0.5);
        }

    .objective-image {
        height: 160px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: #E5E5E5;
        border-radius: 8px;
        margin-bottom: 16px;
    }

        .objective-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

    .objective-image-placeholder {
        font-size: 48px;
        color: #0e4d64;
        font-weight: bold;
    }

    .hero-img {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 400px;
        background-color: #E5E5E5;
        border-radius: 12px;
    }

    .hero-img-placeholder {
        font-size: 64px;
        color: #0e4d64;
        font-weight: bold;
    }

    .about-img {
        height: 300px;
        background-color: #E5E5E5;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
    }

    .about-img-placeholder {
        font-size: 48px;
        color: #0e4d64;
        font-weight: bold;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1.2;
        color: #2C3E50;
        margin-bottom: 40px;
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: #6C757D;
        margin-bottom: 32px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cta-button {
        background-color: #F4C430;
        color: #2C3E50;
        padding: 16px 48px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        display: inline-block;
        border: none;
        cursor: pointer;
    }

        .cta-button:hover {
            background-color: #E6B800;
            color: #2C3E50;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(244, 196, 48, 0.4);
        }

    .section-title {
        font-size: 3.5rem;
        font-weight: 900;
        color: #0e4d64;
        text-align: center;
        margin-bottom: 64px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .objectives-title {
        font-size: 4rem;
        font-weight: 700;
        color: white;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .objectives-subtitle {
        font-size: 1.3rem;
        color: rgba(255,255,255,0.9);
        margin-bottom: 40px;
        line-height: 1.6;
        text-align: justify;
        font-weight: 400;
    }

    .card-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .card-text {
        font-size: 1.2rem;
        line-height: 1.6;
        opacity: 0.9;
        text-align: justify;
    }

    .about-text {
        font-size: 1.4rem;
        line-height: 1.7;
        color: #495057;
        margin-bottom: 32px;
        text-align: justify;
    }

    .hero-description {
        font-size: 1.4rem;
        line-height: 1.8;
        color: #495057;
        margin-bottom: 48px;
        text-align: justify;
    }

    .marquee {
        background: linear-gradient(135deg, #0e4d64 0%, #194041 100%);
        color: white;
        padding: 20px 0;
        text-align: center;
        font-weight: 600;
        letter-spacing: 1px;
        font-size: 1.2rem;
        overflow: hidden;
        white-space: nowrap;
    }

    .marquee-content {
        display: inline-block;
        animation: scroll 30s linear infinite;
    }

    @@keyframes scroll {
        0%

    {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-100%);
    }

    }

    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 32px;
    }

    .py-custom {
        padding: 80px 0;
    }

    .section-full-vh {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 80px 0;
    }

    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 3.8rem;
    }

    .objectives-title {
        font-size: 2.8rem;
    }

    .section-title {
        font-size: 3rem;
    }

    .about-text {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .card-text {
        font-size: 1.1rem;
    }

    .card-custom {
        margin-bottom: 24px;
    }

    .about-text-container {
        padding: 24px 20px;
    }

    }
</style>

<!-- HERO SECTION -->
<section class="py-custom section-full-vh">
    <div class="container-custom">
        <div class="row align-items-center" style="gap: 60px 0;">
            <div class="col-lg-6 mb-4 mb-lg-0" style="padding-right: 40px;">
                <div class="hero-subtitle">Gabay For Good</div>
                <h1 class="hero-title">Empowering Filipino Communities Through Digital Giving</h1>
                <p class="hero-description">
                    Connect with trusted NGOs across the Philippines and make a meaningful impact through secure donations. Our platform bridges the gap between generous hearts and worthy causes, making charitable giving simple, transparent, and effective for Filipino communities.
                </p>

            </div>
            <div class="col-lg-6" style="padding-left: 40px;">
                <div class="hero-img">
                    <img src="~/images/index-bg.jpg" alt="Filipino Community Support" style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MARQUEE / SCROLL SECTION -->
<div class="marquee">
    <div class="marquee-content">
        Trusted NGO Partners &bull; Secure Donations &bull; Community Impact &bull; Gabay For Good &bull; Filipino Causes &bull; Transparent Fundraising &bull; Digital Giving Platform &bull; Social Impact &bull; Gabay For Good &bull; Community Support &bull; NGO Empowerment
    </div>
</div>

<!-- ABOUT US SECTION -->
<section class="bg-section py-custom section-full-vh">
    <div class="container-custom">
        <div class="row align-items-center h-100">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="about-img mb-3">
                    <img src="~/images/abt-2.jpg" alt="NGO Partnership" style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                </div>
                <div class="about-img">
                    <img src="~/images/abt-1.jpeg" alt="Digital Platform" style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                </div>
            </div>
            <div class="col-lg-6 ps-lg-5">
                <h2 class="section-title text-start mb-4">ABOUT US</h2>
                <p class="about-text">
                    Gabay For Good is a pioneering digital platform designed specifically for the Filipino community, connecting compassionate donors with verified non-governmental organizations (NGOs) across the Philippines. We understand that every act of kindness, no matter how small, can create ripple effects that transform lives and strengthen communities throughout our archipelago.
                </p>
                <p class="about-text">
                    Our mission extends beyond simple transactions – we're building a comprehensive ecosystem that empowers NGOs with modern fundraising tools while providing donors with transparency, security, and meaningful engagement opportunities. Through innovative technology and deep understanding of Filipino values of bayanihan and kapamilya, we're revolutionizing how charitable giving works in the digital age, ensuring that every peso donated reaches those who need it most.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- OBJECTIVES SECTION -->
<section class="bg-objectives py-custom section-full-vh">
    <div class="container-custom">
        <div class="row mb-5">
            <div class="col-lg-6">
                <h2 class="objectives-title">OBJECTIVES</h2>
            </div>
            <div class="col-lg-6">
                <p class="objectives-subtitle">
                    Develop a comprehensive platform that revolutionizes fundraising for NGOs in the Philippines while creating sustainable connections between donors and causes.
                </p>
            </div>
        </div>

        <div class="row">
            <!-- Objective 1 -->
            <div class="col-lg-4 mb-4">
                <div class="card-custom">
                    <div class="objective-image">
                        <img src="~/images/obj-1.webp" alt="Enhance NGO Funding and Support" class="img-fluid">
                    </div>
                    <h5 class="card-title">Enhance NGO Funding and Support</h5>
                    <p class="card-text">
                        Improve NGO visibility through digital platforms and encourage sustainable donor relationships while raising awareness about important causes and funding needs across the Philippines.
                    </p>
                </div>
            </div>

            <!-- Objective 2 -->
            <div class="col-lg-4 mb-4">
                <div class="card-custom card-highlight">
                    <h5 class="card-title">Simplify the Donation Process</h5>
                    <p class="card-text">
                        Create user-friendly interfaces that reduce barriers and make giving easy. Support both monetary and in-kind donations while ensuring security and accessibility for all Filipino donors.
                    </p>
                    <div class="objective-image">
                        <img src="~/images/obj-2.jpg" alt="Simplify the Donation Process" class="img-fluid">
                    </div>
                </div>
            </div>

            <!-- Objective 3 -->
            <div class="col-lg-4 mb-4">
                <div class="card-custom">
                    <div class="objective-image">
                        <img src="~/images/obj-3.jpg" alt="Bridge the Digital Divide" class="img-fluid">
                    </div>
                    <h5 class="card-title">Bridge the Digital Divide</h5>
                    <p class="card-text">
                        Empower small NGOs with digital fundraising tools and training. Increase organizational visibility through online listings and help grassroots organizations reach wider audiences and funding sources.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>