@{
    ViewData["Title"] = "Gabay For Good - User Landing Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F8F9FA;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .bg-dark-blue {
        background-color: #0e4d64;
    }

    .bg-section {
        background-color: #ffffff;
    }

    .bg-objectives {
        background-color: #194041;
        color: white;
    }

    .card-custom {
        background-color: #2C7A7B;
        border-radius: 12px;
        padding: 32px 24px;
        color: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .card-custom:hover {
            transform: translateY(-5px);
        }

    .card-highlight {
        background-color: #F4C430;
        color: #2C3E50;
        font-weight: 500;
    }

    .objective-image {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: #E5E5E5;
        border-radius: 8px;
        margin-bottom: 16px;
    }

        .objective-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

    .objective-image-placeholder {
        font-size: 48px;
        color: #4A6B5C;
        font-weight: bold;
    }

    .hero-img {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 400px;
        background-color: #E5E5E5;
        border-radius: 12px;
    }

    .hero-img-placeholder {
        font-size: 64px;
        color: #4A6B5C;
        font-weight: bold;
    }

    .about-img {
        height: 300px;
        background-color: #E5E5E5;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
    }

    .about-img-placeholder {
        font-size: 48px;
        color: #4A6B5C;
        font-weight: bold;
    }

    .hero-title {
        font-size: 5rem;
        font-weight: 900;
        line-height: 1.1;
        color: #2C3E50;
        margin-bottom: 32px;
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: #6C757D;
        margin-bottom: 40px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cta-button {
        background-color: #4A6B5C;
        color: white;
        padding: 16px 48px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        display: inline-block;
        border: none;
        cursor: pointer;
    }

        .cta-button:hover {
            background-color: #3A5B4C;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(74, 107, 92, 0.3);
        }

    .section-title {
        font-size: 3.5rem;
        font-weight: 900;
        color: #4A6B5C;
        text-align: center;
        margin-bottom: 64px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .objectives-title {
        font-size: 5.5rem;
        font-weight: 900;
        color: white;
        margin-bottom: 24px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .objectives-subtitle {
        font-size: 1.5rem;
        color: rgba(255,255,255,0.8);
        margin-bottom: 64px;
        line-height: 1.6;
    }

    .card-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .card-text {
        font-size: 1.2rem;
        line-height: 1.6;
        opacity: 0.9;
    }

    .about-text {
        font-size: 1.4rem;
        line-height: 1.7;
        color: #495057;
        margin-bottom: 32px;
    }



    .marquee {
        background-color: #4A6B5C;
        color: white;
        padding: 20px 0;
        text-align: center;
        font-weight: 600;
        letter-spacing: 1px;
        font-size: 1.2rem;
        overflow: hidden;
        white-space: nowrap;
    }

    .marquee-content {
        display: inline-block;
        animation: scroll 30s linear infinite;
    }

    @@keyframes scroll {
        0%

    {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-100%);
    }

    }

    .container-custom {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    .py-custom {
        padding: 0;
    }

    .section-full-vh {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 3.5rem;
    }

    .objectives-title {
        font-size: 3rem;
    }

    .section-title {
        font-size: 2.5rem;
    }

    .about-text {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .card-text {
        font-size: 1.1rem;
    }

    .card-custom {
        margin-bottom: 24px;
    }

    .about-text-container {
        padding: 24px 20px;
    }

    }
</style>

