<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/adminSite.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid p-0">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <!-- Full admin layout with sidebar -->
            <div class="d-flex">
                <div class="admin-sidebar">
                    <div class="sidebar-header">
                        <a href="#" class="admin-brand">Gabay For Good</a>
                    </div>
                    <nav class="nav flex-column">
                        <a class="nav-link active text-dark" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                        <a class="nav-link text-dark" asp-controller="Admin" asp-action="RegisterOrg">
                            <i class="fas fa-users me-2"></i> Register NGO
                        </a>
                    </nav>
                    <div class="sidebar-footer">
                        <a class="footer-link" asp-controller="Admin" asp-action="Logout">Logout</a>
                    </div>
                </div>
                <div class="admin-main-content" style="background-color: #2C7A7B;">
                    <main class="admin-content text-center">
                        @RenderBody()
                    </main>
                </div>
            </div>
        }
        else
        {
            @RenderBody()
        }
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>